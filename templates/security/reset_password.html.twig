{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container mt-5">
    <form method="post">
        <h1 class="h1 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
        <h4><small>Un email vous sera envoyé afin de réinitialiser votre mot de passe.</small></h4>
        <br>
        <label for="inputEmail">Email</label>
        <input type="email" name="email" id="inputEmail" placeholder="Saisissez votre adresse email..." class="form-control" required autofocus>
        <br>
        <button class="btn btn-lg btn-dark custom-link-two" type="submit">
            Valider
        </button>
    </form>
    <hr>
    <a href="{{ path('app_login')}}" class="custom-link">Retour à l'écran de connexion<a>
</div>
{% endblock %}
