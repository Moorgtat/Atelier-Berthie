{% extends 'base.html.twig' %}

{% block title %}Livraison de ma commande
{% endblock %}

{% block body %}
	<div class="container mt-5 mb-5">
		<h1>Ou et comment me livrer?</h1>
		<p>Choissisez votre adresse et votre mode de livraison.</p>
		<hr>
		<div class="row">
			<div class="col">
				{% set formHtml %}
				{{ form_start(form, {action:path('commande_validation')}) }}
				<div class="row mb-4">
					<div class="col col-md-6">
						<h3>
							{{ form_label(form.adresses, 'Choisissez votre adresse de livraison:')}}
						</h3>
						{{ form_widget(form.adresses)}}
						<br>
						<div class="text-left">
							<a href="{{ path('adresse_add')}}" class="custom-link" style="font-size: 15px;">
								<i class="fas fa-map-marker-alt"></i>
								Ajouter une nouvelle adresse</a>
						</div>
					</div>
					<div class="col col-md-6">
						<h3>
							{{ form_label(form.transporteurs, 'Choisissez votre transporteur:')}}
						</h3>
						{{ form_widget(form.transporteurs)}}
					</div>
				</div>
				<hr>
                <div class="text-right">
                <button type="submit" class="btn btn-lg btn-dark custom-link-two">
                    Passer au r√©capitulatif de ma commande<i class="fas fa-caret-right fa-lg" style="color: white; padding-top: 3px; margin-left: 10px;"></i>
				</button>
                </div>
				{{ form_end(form) }}
				{% endset %}
				{{ formHtml | replace({'[br]' : '<br>'}) | raw }}
			</div>
		</div>
	</div>
{% endblock %}

