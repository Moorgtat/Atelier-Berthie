{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
<h1>Mes adresses</h1>
<hr>
{% if app.user.adresses | length == 0 %}
    <p>Vous n'avez pas encore ajoutÃ© d'adresse.</p>
{% else %}
<div class="row">
{% for adresse in app.user.adresses %}
<div class="col-md-6 col-lg-4 mb-2">
    <div class="card" style="width: 100%; height: 100%;">
        <div class="card-body">
            <h5 class="card-title">{{ adresse.prenom }} {{ adresse.nom }}</h5>
            <p class="card-text">{{ adresse.societe }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{ adresse.titre }}</li>
            <li class="list-group-item">{{ adresse.numero }} {{ adresse.rue }} {{ adresse.codepostal }} {{ adresse.ville }} {{ adresse.pays }}</li>
            <li class="list-group-item">{{ adresse.telephone }}</li>
        </ul>
        <div class="card-body text-center">
            <a href="{{ path('adresse_edit', {'id': adresse.id}) }}" class="custom-link">Modifier</a>
            <a href="{{ path('adresse_delete', {'id': adresse.id}) }}" class="custom-link ml-5">Supprimer</a>
        </div>
    </div>
</div>
{% endfor %}
</div>
{% endif %}
<br>
<div class="text-left">
	<a href="{{ path('adresse_add')}}" class="custom-link" style="font-size: 15px;">
		<i class="fas fa-map-marker-alt"></i>Ajouter une nouvelle adresse
    </a>
</div>
<hr>
  <div class="text-right mr-4">
    <a href="{{ path('account') }}" class="custom-link">Retour</a>
  </div>
</div>
{% endblock %}
